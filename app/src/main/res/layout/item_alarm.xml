<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/alarm_item_background"
    tools:background="@drawable/main_background"
    >
  <TextView
      android:id="@+id/tvName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/tvHour"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:textSize="45sp"
      app:layout_constraintEnd_toStartOf="@id/tvColon"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="00"
      />

  <TextView
      android:id="@+id/tvColon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:text="@string/edit_colon"
      android:textSize="45sp"
      app:layout_constraintBottom_toBottomOf="@id/tvHour"
      app:layout_constraintEnd_toStartOf="@id/tvMinute"
      app:layout_constraintStart_toEndOf="@id/tvHour"
      app:layout_constraintTop_toTopOf="@id/tvHour"
      tools:text=":"
      />

  <TextView
      android:id="@+id/tvMinute"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:textSize="45sp"
      app:layout_constraintStart_toEndOf="@id/tvColon"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="00"
      />


  <TextView
      android:id="@+id/tvTimeLeft"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvHour"
      tools:text="@string/edit_time_left"
      />
  <Switch
      android:id="@+id/switchAlarm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:padding="20dp"
      android:checked="true"
      />
</android.support.constraint.ConstraintLayout>