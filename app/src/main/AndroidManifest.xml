<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="internalOnly"
    package="com.javagic.smartalarmclock">

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.QUICKBOOT_POWERON" />        <!--for htc-->
  <uses-permission android:name="android.permission.WAKE_LOCK" /><!--TODO-->
  <application
      android:name=".base.AlarmApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="GoogleAppIndexingWarning">

    <receiver
        android:name=".manager.BootReceiver"
        android:enabled="false">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
        <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
        <!--for htc-->
        <action android:name="android.intent.action.QUICKBOOT_POWERON" />
        <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
      </intent-filter>
    </receiver>


    <service
        android:name=".manager.AlarmService"
        android:directBootAware="true"
        android:exported="false"
        tools:ignore="UnusedAttribute" />

    <service
        android:name=".music.SoundService"
        android:directBootAware="true"
        android:exported="false"
        tools:ignore="UnusedAttribute" />

    <activity
        android:name=".main.MainActivity"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name=".create.CreateAlarmActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" />
    <activity
        android:name=".trigger.TriggerActivity"
        android:screenOrientation="portrait"
        android:clearTaskOnLaunch="true"
        android:theme="@style/AppTheme" />
  </application>

</manifest>